<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/bkg_main"
    tools:context=".MainActivity">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="50dp"
            android:text="Silahkan Pilih Menu"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/btnSuhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#063852"
            android:textColor="@color/white"
            android:text="Convert Suhu" />

        <Button
            android:id="@+id/btnDiskon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#063852"
            android:textColor="@color/white"
            android:text="Diskon Toko" />

        <Button
            android:id="@+id/btnLuas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#063852"
            android:textColor="@color/white"
            android:text="Balok" />

        <Button
            android:id="@+id/btnBilangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#063852"
            android:textColor="@color/white"
            android:text="Bilangan" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#063852"
            android:textColor="@color/white"
            android:text="Exit" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#063852"
            android:textColor="@color/white"
            android:text="Login Page" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



